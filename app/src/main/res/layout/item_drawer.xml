<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/drawer_item_height"
	android:background="?attr/selectableItemBackground">

	<View
		android:id="@+id/background"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?attr/colorDrawerSelect"/>

	<android.support.v7.widget.LinearLayoutCompat
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_centerVertical="true"
		android:orientation="horizontal">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/ItemIcon"
			android:layout_width="@dimen/icon_size"
			android:layout_height="@dimen/icon_size"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="@dimen/icon_margin"
			android:layout_marginRight="@dimen/icon_margin"
			android:tint="?attr/colorDrawerIcon"/>

		<android.support.v7.widget.AppCompatTextView
			android:id="@+id/itemTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|start|left"
			android:textColor="?attr/colorTextDrawer"
			android:textSize="@dimen/text_size_drawer"/>

	</android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>